@model IEnumerable<MarketPracticingPlatform.DataBaseModels.Product>
@{
    Layout = null;
}

<!DOCTYPE html>

<body>
    <div class="RecommendedProducts">
        <h3>С этим  продуктом покупают</h3>
        @foreach (var @element in Model)
        {
            <div class="MiniProductInfo">
                <a href="/MarketSearch/ShowProductInfo/@element.ProductId">@element.Name</a>
                <p>@element.Price</p>
            </div>
        }
    </div>

</body>
